<div class="posts">
    <section class="post">
        <header class="post-header">
            <h2 class="post-title">Radio Input</h2>
        </header>

        <div class="pure-g post-description">
          <div class="pure-u-1 pure-u-md-1-6">
            {{! BEGIN-SNIPPET radio-input}}
            {{#each units as |unit|}}
              <label><input type="radio"
                  name="options"
                  value="{{unit.id}}"
                  onclick={{action (mut activeUnit) value="target.value"}}
                  checked={{eq activeUnit unit.id}}> {{unit.name}}
              </label><br>
            {{/each}}
            {{! END-SNIPPET }}
            <strong>{{activeUnit}}</strong>
          </div>
          <div class="pure-u-1 pure-u-md-5-6">
            {{code-snippet name="radio-input.hbs"}}
          </div>
        </div>
    </section>
</div>

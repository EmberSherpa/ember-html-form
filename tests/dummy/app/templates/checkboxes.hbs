<div class="posts">
  <h1 class="content-subhead">Checkboxes</h1>

  <section class="post">
      <header class="post-header">
          <h2 class="post-title">Simple Example</h2>
      </header>

      <div class="pure-g post-description">
        <div class="pure-u-1 pure-u-md-1-6">
          {{! BEGIN-SNIPPET checkboxes-input}}
          {{#each options as |option|}}
            <label>
              <input
                type="checkbox"
                name="options"
                value="{{option.id}}"
                onclick={{action "updateSelection" value="target.value"}}
                checked={{array-contains options option.id}}
                > {{option.name}}
            </label><br>
          {{/each}}
          {{! END-SNIPPET }}
            <p>{{#each selection as |item|}}{{item}}, {{/each}}</p>
        </div>
        <div class="pure-u-1 pure-u-md-5-6">
          {{code-snippet name="checkboxes-input.hbs"}}
          {{code-snippet name="simple-checkboxes-controller.js"}}
        </div>
      </div>
  </section>
</div>
